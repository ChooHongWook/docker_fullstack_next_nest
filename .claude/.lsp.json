{
  "typescript": {
    "command": "typescript-language-server",
    "args": ["--stdio"],
    "extensionToLanguage": {
      ".ts": "typescript",
      ".tsx": "typescriptreact",
      ".js": "javascript",
      ".jsx": "javascriptreact"
    },
    "initializationOptions": {
      "preferences": {
        "includeInlayParameterNameHints": "all",
        "includeInlayPropertyDeclarationTypeHints": true,
        "includeInlayFunctionLikeReturnTypeHints": true
      }
    },
    "settings": {
      "typescript": {
        "inlayHints": {
          "includeInlayParameterNameHints": "all",
          "includeInlayPropertyDeclarationTypeHints": true,
          "includeInlayFunctionLikeReturnTypeHints": true
        }
      }
    },
    "startupTimeout": 10000,
    "maxRestarts": 3,
    "restartOnCrash": true
  }
}
